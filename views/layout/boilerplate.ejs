<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>CoinCoach - Your Personal Finance Assistant</title>

    <!-- Favicon -->
    <link rel="icon" type="image/png" href="https://cdn-icons-png.flaticon.com/512/2091/2091665.png">

    <!-- Font Awesome for icons -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">

    <!-- Google Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/css/bootstrap.min.css" rel="stylesheet">

    <!-- Custom CSS -->
    <link rel="stylesheet" href="/css/styles.css">
</head>
<body>
    <!-- Header/Navigation -->
    <header class="bg-white shadow-sm">
        <nav class="container d-flex justify-content-between align-items-center py-3">
            <a href="/" class="d-flex align-items-center text-decoration-none">
                <i class="fas fa-coins text-primary me-2" style="font-size: 1.5rem;"></i>
                <span class="h4 mb-0 text-primary fw-bold">CoinCoach</span>
            </a>

            <div class="d-none d-md-flex">
                <a href="/" class="px-3 py-2 text-dark text-decoration-none">Home</a>
                <a href="/transactions" class="px-3 py-2 text-dark text-decoration-none">Transactions</a>
                <a href="/bills" class="px-3 py-2 text-dark text-decoration-none">Bills</a>
                <a href="/goals" class="px-3 py-2 text-dark text-decoration-none">Goals</a>
                <a href="/insights" class="px-3 py-2 text-dark text-decoration-none">Insights</a>
                <a href="/conversion" class="px-3 py-2 text-dark text-decoration-none">Conversion</a>
                <a href="/chat" class="px-3 py-2 text-dark text-decoration-none">AI Assistant</a>
            </div>

            <div class="d-flex align-items-center">
                <% if (typeof currentUser !== 'undefined' && currentUser) { %>
                    <div class="dropdown">
                        <button class="btn btn-outline-primary dropdown-toggle" type="button" id="userDropdown" data-bs-toggle="dropdown" aria-expanded="false">
                            <i class="fas fa-user-circle me-1"></i> Account
                        </button>
                        <ul class="dropdown-menu dropdown-menu-end shadow" aria-labelledby="userDropdown">
                            <li><a class="dropdown-item" href="/user/profile"><i class="fas fa-user me-2"></i> Profile</a></li>
                            <li><a class="dropdown-item" href="/user/settings"><i class="fas fa-cog me-2"></i> Settings</a></li>
                            <li><hr class="dropdown-divider"></li>
                            <li><a class="dropdown-item" href="/logout"><i class="fas fa-sign-out-alt me-2"></i> Logout</a></li>
                        </ul>
                    </div>
                <% } else { %>
                    <a href="/login" class="btn btn-outline-primary me-2">Login</a>
                    <a href="/register" class="btn btn-primary">Sign Up</a>
                <% } %>

                <!-- Mobile menu button -->
                <button class="btn d-md-none ms-2" type="button" data-bs-toggle="offcanvas" data-bs-target="#mobileMenu" aria-controls="mobileMenu">
                    <i class="fas fa-bars"></i>
                </button>
            </div>
        </nav>
    </header>

    <!-- Mobile menu (off-canvas) -->
    <div class="offcanvas offcanvas-end" tabindex="-1" id="mobileMenu" aria-labelledby="mobileMenuLabel">
        <div class="offcanvas-header">
            <h5 class="offcanvas-title" id="mobileMenuLabel">
                <i class="fas fa-coins text-primary me-2"></i>
                <span class="text-primary fw-bold">CoinCoach</span>
            </h5>
            <button type="button" class="btn-close" data-bs-dismiss="offcanvas" aria-label="Close"></button>
        </div>
        <div class="offcanvas-body">
            <div class="d-flex flex-column">
                <a href="/" class="py-2 text-dark text-decoration-none"><i class="fas fa-home me-2"></i> Home</a>
                <a href="/transactions" class="py-2 text-dark text-decoration-none"><i class="fas fa-exchange-alt me-2"></i> Transactions</a>
                <a href="/bills" class="py-2 text-dark text-decoration-none"><i class="fas fa-file-invoice-dollar me-2"></i> Bills</a>
                <a href="/goals" class="py-2 text-dark text-decoration-none"><i class="fas fa-bullseye me-2"></i> Goals</a>
                <a href="/insights" class="py-2 text-dark text-decoration-none"><i class="fas fa-chart-line me-2"></i> Insights</a>
                <a href="/conversion" class="py-2 text-dark text-decoration-none"><i class="fas fa-dollar-sign me-2"></i> Conversion</a>
                <a href="/chat" class="py-2 text-dark text-decoration-none"><i class="fas fa-robot me-2"></i> AI Assistant</a>

                <hr>

                <% if (typeof currentUser !== 'undefined' && currentUser) { %>
                    <a href="/user/profile" class="py-2 text-dark text-decoration-none"><i class="fas fa-user me-2"></i> Profile</a>
                    <a href="/user/settings" class="py-2 text-dark text-decoration-none"><i class="fas fa-cog me-2"></i> Settings</a>
                    <a href="/logout" class="py-2 text-dark text-decoration-none"><i class="fas fa-sign-out-alt me-2"></i> Logout</a>
                <% } else { %>
                    <a href="/login" class="btn btn-outline-primary mb-2"><i class="fas fa-sign-in-alt me-2"></i> Login</a>
                    <a href="/register" class="btn btn-primary"><i class="fas fa-user-plus me-2"></i> Sign Up</a>
                <% } %>
            </div>
        </div>
    </div>

    <!-- Main Content -->
    <main class="container py-4">
        <%- include('../partials/flash.ejs') %>
        <%- body %>
    </main>

    <!-- Footer -->
    <footer class="bg-dark text-light py-4 mt-5">
        <div class="container">
            <div class="row">
                <div class="col-md-4 mb-4 mb-md-0">
                    <h5 class="mb-3">CoinCoach</h5>
                    <p class="text-light opacity-75">Your personal finance assistant to help you manage your money, track expenses, and achieve your financial goals.</p>
                </div>
                <div class="col-md-2 mb-4 mb-md-0">
                    <h6 class="mb-3">Features</h6>
                    <ul class="list-unstyled">
                        <li><a href="/transactions" class="text-light opacity-75 text-decoration-none">Transactions</a></li>
                        <li><a href="/bills" class="text-light opacity-75 text-decoration-none">Bills</a></li>
                        <li><a href="/goals" class="text-light opacity-75 text-decoration-none">Goals</a></li>
                        <li><a href="/insights" class="text-light opacity-75 text-decoration-none">Insights</a></li>
                    </ul>
                </div>
                <div class="col-md-2 mb-4 mb-md-0">
                    <h6 class="mb-3">Tools</h6>
                    <ul class="list-unstyled">
                        <li><a href="/conversion" class="text-light opacity-75 text-decoration-none">Currency Converter</a></li>
                        <li><a href="/chat" class="text-light opacity-75 text-decoration-none">AI Assistant</a></li>
                    </ul>
                </div>
                <div class="col-md-4">
                    <h6 class="mb-3">Connect With Us</h6>
                    <div class="d-flex gap-3 mb-3">
                        <a href="#" class="text-light"><i class="fab fa-twitter fa-lg"></i></a>
                        <a href="#" class="text-light"><i class="fab fa-facebook fa-lg"></i></a>
                        <a href="#" class="text-light"><i class="fab fa-instagram fa-lg"></i></a>
                        <a href="#" class="text-light"><i class="fab fa-linkedin fa-lg"></i></a>
                    </div>
                    <p class="text-light opacity-75 small">Â© 2026 CoinCoach. All rights reserved.</p>
                </div>
            </div>
        </div>
    </footer>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/js/bootstrap.bundle.min.js"></script>

    <!-- Custom JS -->
    <script src="/js/validateForms.js"></script>
    <script src="/js/conversion.js"></script>
</body>
</html>
