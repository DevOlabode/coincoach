<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>CoinCoach - Your Personal Finance Assistant</title>

    <!-- Favicon -->
    <link rel="icon" type="image/png" href="https://cdn-icons-png.flaticon.com/512/2091/2091665.png">

    <!-- Font Awesome for icons -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">

    <!-- Google Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/css/bootstrap.min.css" rel="stylesheet">

    <!-- Custom CSS -->
    <link rel="stylesheet" href="/css/styles.css">
</head>
<body>

    <!-- Header -->
    <%- include('../partials/header.ejs') %>


    <!-- Mobile menu (off-canvas) -->
    <div class="offcanvas offcanvas-end" tabindex="-1" id="mobileMenu" aria-labelledby="mobileMenuLabel" style="width: 280px;">
        <div class="offcanvas-header bg-light border-bottom">
            <h5 class="offcanvas-title" id="mobileMenuLabel">
                <i class="fas fa-coins text-primary me-2"></i>
                <span class="text-primary fw-bold">CoinCoach</span>
            </h5>
            <button type="button" class="btn-close" data-bs-dismiss="offcanvas" aria-label="Close"></button>
        </div>
        <div class="offcanvas-body p-0">
            <div class="d-flex flex-column">
                <!-- Navigation Links -->
                <div class="p-3">
                    <h6 class="text-muted mb-3 text-uppercase fw-bold" style="font-size: 0.8rem; letter-spacing: 0.5px;">Navigation</h6>
                    <a href="/" class="d-flex align-items-center py-3 px-2 text-dark text-decoration-none rounded mb-1 hover-bg-light">
                        <i class="fas fa-home me-3" style="width: 20px;"></i>
                        <span>Home</span>
                    </a>
                    <a href="/transactions" class="d-flex align-items-center py-3 px-2 text-dark text-decoration-none rounded mb-1 hover-bg-light">
                        <i class="fas fa-exchange-alt me-3" style="width: 20px;"></i>
                        <span>Transactions</span>
                    </a>
                    <a href="/bills" class="d-flex align-items-center py-3 px-2 text-dark text-decoration-none rounded mb-1 hover-bg-light">
                        <i class="fas fa-file-invoice-dollar me-3" style="width: 20px;"></i>
                        <span>Bills</span>
                    </a>
                    <a href="/goals" class="d-flex align-items-center py-3 px-2 text-dark text-decoration-none rounded mb-1 hover-bg-light">
                        <i class="fas fa-bullseye me-3" style="width: 20px;"></i>
                        <span>Goals</span>
                    </a>
                    <a href="/insights" class="d-flex align-items-center py-3 px-2 text-dark text-decoration-none rounded mb-1 hover-bg-light">
                        <i class="fas fa-chart-line me-3" style="width: 20px;"></i>
                        <span>Insights</span>
                    </a>
                    <a href="/conversion" class="d-flex align-items-center py-3 px-2 text-dark text-decoration-none rounded mb-1 hover-bg-light">
                        <i class="fas fa-dollar-sign me-3" style="width: 20px;"></i>
                        <span>Conversion</span>
                    </a>
                    <a href="/chat" class="d-flex align-items-center py-3 px-2 text-dark text-decoration-none rounded mb-1 hover-bg-light">
                        <i class="fas fa-robot me-3" style="width: 20px;"></i>
                        <span>AI Assistant</span>
                    </a>
                </div>

                <hr class="my-2">

                <!-- User Section -->
                <% if (typeof currentUser !== 'undefined' && currentUser) { %>
                    <div class="p-3">
                        <h6 class="text-muted mb-3 text-uppercase fw-bold" style="font-size: 0.8rem; letter-spacing: 0.5px;">Account</h6>
                        <a href="/user/profile" class="d-flex align-items-center py-3 px-2 text-dark text-decoration-none rounded mb-1 hover-bg-light">
                            <i class="fas fa-user me-3" style="width: 20px;"></i>
                            <span>Profile</span>
                        </a>
                        <a href="/user/settings" class="d-flex align-items-center py-3 px-2 text-dark text-decoration-none rounded mb-1 hover-bg-light">
                            <i class="fas fa-cog me-3" style="width: 20px;"></i>
                            <span>Settings</span>
                        </a>
                        <a href="/logout" class="d-flex align-items-center py-3 px-2 text-danger text-decoration-none rounded mb-1 hover-bg-light">
                            <i class="fas fa-sign-out-alt me-3" style="width: 20px;"></i>
                            <span>Logout</span>
                        </a>
                    </div>
                <% } else { %>
                    <div class="p-3">
                        <a href="/login" class="btn btn-outline-primary w-100 mb-2 d-flex align-items-center justify-content-center">
                            <i class="fas fa-sign-in-alt me-2"></i>
                            <span>Login</span>
                        </a>
                        <a href="/register" class="btn btn-primary w-100 d-flex align-items-center justify-content-center">
                            <i class="fas fa-user-plus me-2"></i>
                            <span>Sign Up</span>
                        </a>
                    </div>
                <% } %>
            </div>
        </div>
    </div>

    <!-- Main Content -->
    <main class="container py-4">
        <%- include('../partials/flash.ejs') %>
        <%- body %>
    </main>

    <!-- Footer -->
    <footer class="bg-gradient-dark text-light py-5 mt-5">
        <div class="container">
            <div class="row">
                <div class="col-md-4 mb-4 mb-md-0 fade-in">
                    <div class="d-flex align-items-center mb-3">
                        <i class="fas fa-coins text-secondary me-2" style="font-size: 1.5rem;"></i>
                        <h5 class="mb-0">CoinCoach</h5>
                    </div>
                    <p class="text-light opacity-75">Your personal finance assistant to help you manage your money, track expenses, and achieve your financial goals.</p>
                    <div class="mt-4">
                        <a href="/register" class="btn btn-outline-light btn-sm hover-bright">
                            <i class="fas fa-rocket me-1"></i> Get Started
                        </a>
                    </div>
                </div>
                <div class="col-md-2 mb-4 mb-md-0 fade-in" style="animation-delay: 0.1s;">
                    <h6 class="mb-3 text-secondary">Features</h6>
                    <ul class="list-unstyled">
                        <li class="mb-2"><a href="/transactions" class="text-light opacity-75 text-decoration-none hover-bright"><i class="fas fa-exchange-alt me-1"></i> Transactions</a></li>
                        <li class="mb-2"><a href="/bills" class="text-light opacity-75 text-decoration-none hover-bright"><i class="fas fa-file-invoice-dollar me-1"></i> Bills</a></li>
                        <li class="mb-2"><a href="/goals" class="text-light opacity-75 text-decoration-none hover-bright"><i class="fas fa-bullseye me-1"></i> Goals</a></li>
                        <li class="mb-2"><a href="/insights" class="text-light opacity-75 text-decoration-none hover-bright"><i class="fas fa-chart-line me-1"></i> Insights</a></li>
                    </ul>
                </div>
                <div class="col-md-2 mb-4 mb-md-0 fade-in" style="animation-delay: 0.2s;">
                    <h6 class="mb-3 text-secondary">Tools</h6>
                    <ul class="list-unstyled">
                        <li class="mb-2"><a href="/conversion" class="text-light opacity-75 text-decoration-none hover-bright"><i class="fas fa-dollar-sign me-1"></i> Currency Converter</a></li>
                        <li class="mb-2"><a href="/chat" class="text-light opacity-75 text-decoration-none hover-bright"><i class="fas fa-robot me-1"></i> AI Assistant</a></li>
                    </ul>
                </div>
                <div class="col-md-4 fade-in" style="animation-delay: 0.3s;">
                    <h6 class="mb-3 text-secondary">Connect With Us</h6>
                    <div class="d-flex gap-3 mb-3">
                        <a href="#" class="text-light hover-lift"><i class="fab fa-twitter fa-lg"></i></a>
                        <a href="#" class="text-light hover-lift"><i class="fab fa-facebook fa-lg"></i></a>
                        <a href="#" class="text-light hover-lift"><i class="fab fa-instagram fa-lg"></i></a>
                        <a href="#" class="text-light hover-lift"><i class="fab fa-linkedin fa-lg"></i></a>
                    </div>
                    <div class="mt-4">
                        <p class="text-light opacity-75 small">Â© 2026 CoinCoach. All rights reserved.</p>
                        <p class="text-light opacity-50 small">Designed for financial success</p>
                    </div>
                </div>
            </div>
        </div>
    </footer>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/js/bootstrap.bundle.min.js"></script>

    <!-- Custom JS -->
    <script src="/js/validateForms.js"></script>
    <script src="/js/conversion.js"></script>
</body>
</html>
