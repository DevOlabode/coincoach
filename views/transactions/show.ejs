<% layout('layout/boilerplate.ejs') %>

<h1><%= transaction.name %></h1>

<ul>
    <li><%= transaction.category %></li>
    <li><%= transaction.date %></li>
    <li><%= transaction.amount %></li>
    <li><%= transaction.type %></li>
    <li><%= transaction.description %></li>
    <li><%= transaction.reoccurence %></li>
</ul>


<form action="/transactions/<%= transaction._id %>?_method=DELETE" method="post">
    <button class="btn btn-danger m-2">Delete Transaction</button>
</form>

<a href="/transactions/<%= transaction._id %>/edit" class="btn btn-warning m-2">Edit Transaction</a>