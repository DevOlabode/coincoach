<% layout('./layout/boilerplate') %>

<div class="container-fluid py-4">
    <div class="row">
        <div class="col-12">
            <h1 class="text-center mb-4">
                <%= new Date().toLocaleString('default', { month: 'long' }) %> <%= currentYear %>
            </h1>
            <h2 class="text-center mb-4">Your financial snapshot</h2>
        </div>
    </div>

    <!-- Financial Snapshot Section -->
    <div class="row mb-4">
        <div class="col-lg-4 col-md-6 mb-4">
            <div class="card shadow-sm h-100">
                <div class="card-body text-center">
                    <h5 class="card-title">Total Income</h5>
                    <h2 class="text-success"><%= totalIncome.toFixed(2) %></h2>
                </div>
            </div>
        </div>
        <div class="col-lg-4 col-md-6 mb-4">
            <div class="card shadow-sm h-100">
                <div class="card-body text-center">
                    <h5 class="card-title">Total Expenses</h5>
                    <h2 class="text-danger"><%= totalExpenses.toFixed(2) %></h2>
                </div>
            </div>
        </div>
        <div class="col-lg-4 col-md-6 mb-4">
            <div class="card shadow-sm h-100">
                <div class="card-body text-center">
                    <h5 class="card-title">Net Balance</h5>
                    <h2 class="<%= netBalance >= 0 ? 'text-success' : 'text-danger' %>"><%= netBalance.toFixed(2) %></h2>
                    <p class="text-muted">Income - Expenses</p>
                </div>
            </div>
        </div>
    </div>

    <!-- Additional Metrics Section -->
    <div class="row mb-4">
        <div class="col-lg-6 col-md-6 mb-4">
            <div class="card shadow-sm h-100">
                <div class="card-body text-center">
                    <h5 class="card-title">Top Expense Category</h5>
                    <h2 class="text-warning"><%= topExpenseCategory %></h2>
                </div>
            </div>
        </div>
        <div class="col-lg-6 col-md-6 mb-4">
            <div class="card shadow-sm h-100">
                <div class="card-body text-center">
                    <h5 class="card-title">Transactions</h5>
                    <h2 class="text-info"><%= transactionsThisMonth %></h2>
                    <p class="text-muted">This month</p>
                </div>
            </div>
        </div>
    </div>

    <!-- Average Transaction and Recent Transactions -->
    <div class="row">
        <div class="col-lg-6 col-md-6 mb-4">
            <div class="card shadow-sm h-100">
                <div class="card-body text-center">
                    <h5 class="card-title">Average Transaction</h5>
                    <h2 class="text-primary"><%= averageTransaction.toFixed(2) %></h2>
                    <p class="text-muted">Per transaction</p>
                </div>
            </div>
        </div>
        <div class="col-lg-6 col-md-6 mb-4">
            <div class="card shadow-sm h-100">
                <div class="card-body">
                    <h5 class="card-title">Recent Transactions</h5>
                    <ul class="list-group list-group-flush">
                        <% recentTransactions.forEach(transaction => { %>
                            <li class="list-group-item d-flex justify-content-between align-items-center">
                                <%= transaction.name || 'Unnamed' %>
                                <span class="<%= transaction.type === 'income' ? 'text-success' : 'text-danger' %>">
                                    <%= transaction.type === 'income' ? '+' : '-' %><%= transaction.amount.toFixed(2) %>
                                </span>
                            </li>
                        <% }) %>
                        <% if (recentTransactions.length === 0) { %>
                            <li class="list-group-item text-muted">No recent transactions</li>
                        <% } %>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>
