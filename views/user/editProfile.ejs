<% layout('./layout/boilerplate') %>

<h2>Edit Profile</h2>

<form action="/user/edit-profile" method="post" class="needs-validation" novalidate>
    <input type="hidden" name="_csrf" value="<%= locals.csrfToken || '' %>">

    <label for="fullName" class="form-labe">Full Name</label>
    <input type="text" name="fullName" id="fullName" class="form-control" value="<%= user.fullName %>" required>
    <label for="displayName" class="form-label">Display Name</label>
    <input type="text" id="displayName" name="displayName" class="form-control" value="<%= user.displayName %>" required>

    <label for="preferredCurrency" class="form-label">Preffered Currency</label>
    <input type="text" name="preferredCurrency" id="preferredCurrency" value="<%= user.preferredCurrency %>" class="form-control" required>

    <label for="location" class="form-label">Location</label>
    <input type="text" id="location" name="location" value="<%= user.location %>" required class="form-control">

    <label for="bio" class="form-label">Bio</label>
    <textarea name="bio" id="bio"><%= user.bio %></textarea>

    <button class="btn btn-primary">Update Profile</button>
</form>