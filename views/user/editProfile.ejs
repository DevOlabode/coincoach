<% layout('layout/boilerplate.ejs') %>

<h2>Edit Profile</h2>

<form action="/user/edit-profile" method="post" class="needs-validation" novalidate>
    <label for="displayName" class="form-label">Display Name</label>
    <input type="text" id="displayName" class="form-control" value="<%= user.displayName %>" required>

    <label for="preferredCurrency" class="form-label">Preffered Currency</label>
    <input type="text" id="preferredCurrency" value="<%= user.preferredCurrency %>" class="form-control" required>

    <label for="location" class="form-label">Location</label>
    <input type="text" id="location" value="<%= user.location %>" required class="form-control">

    <label for="bio" class="form-label">Bio</label>
    <textarea name="bio" id="bio"><%= user.bio %></textarea>

    <button class="btn btn-primary">Update Profile</button>
</form>