<%- layout('./layout/boilerplate') %>

<div class="container mt-4">

  <!-- =========================
       GOAL HEADER
  ========================= -->
  <div class="mb-4">
    <h2 class="fw-bold">Financial Goal</h2>
    <h3 class="fw-bold"><%= goal.title %></h3>
    <p class="text-muted">
      Target:
      <strong>$<%= goal.goalSummary.targetAmount %></strong>
      over
      <strong>
        <%= goal.goalSummary.timeframeValue %>
        <%= goal.goalSummary.timeframeUnit %>(s)
      </strong>
    </p>
  </div>

  <!-- =========================
       PROGRESS CARD
  ========================= -->
  <div class="card mb-4 shadow-sm">
    <div class="card-body">
      <h5 class="card-title">Progress</h5>

      <div class="progress mb-2" style="height: 20px;">
        <div
          class="progress-bar bg-success"
          role="progressbar"
          style="width: <%= goal.progress.completionPercentage %>%"
        >
          <%= goal.progress.completionPercentage.toFixed(1) %>%
        </div>
      </div>

      <p class="mb-1">
        Saved:
        <strong>$<%= goal.progress.totalSavedSoFar %></strong>
        /
        $<%= goal.goalSummary.targetAmount %>
      </p>

      <small class="text-muted">
        Current period: <%= goal.progress.currentPeriod %>
      </small>
    </div>
  </div>

  <!-- =========================
       GOAL STATUS
  ========================= -->
  <div class="card mb-4 shadow-sm">
    <div class="card-body">
      <h5 class="card-title">Goal Status</h5>

      <form
        action="/goals/<%= goal._id %>/status?_method=PATCH"
        method="POST"
      >
        <div class="input-group">
          <select name="status" class="form-select" required>
            <option value="active" <%= goal.status === 'active' ? 'selected' : '' %>>
              Active
            </option>
            <option value="paused" <%= goal.status === 'paused' ? 'selected' : '' %>>
              Paused
            </option>
            <option value="completed" <%= goal.status === 'completed' ? 'selected' : '' %>>
              Completed
            </option>
          </select>
          <button class="btn btn-primary" type="submit">
            Update Status
          </button>
        </div>
      </form>
    </div>
  </div>

  <!-- =========================
       SAVINGS PLAN
  ========================= -->
  <div class="card mb-4 shadow-sm">
    <div class="card-body">
      <h5 class="card-title">Savings Plan</h5>

      <ul class="list-group list-group-flush">
        <% goal.plan.forEach(step => { %>
          <li class="list-group-item d-flex justify-content-between align-items-start">

            <div>
              <strong>
                <%= goal.goalSummary.timeframeUnit %>
                <%= step.periodNumber %>
              </strong>
              â€” Save
              <strong>$<%= step.amountToSave %></strong>

              <% if (step.recommendedActions && step.recommendedActions.length) { %>
                <ul class="mt-2">
                  <% step.recommendedActions.forEach(action => { %>
                    <li>
                      <small><%= action %></small>
                    </li>
                  <% }) %>
                </ul>
              <% } %>
            </div>

            <div>
              <% if (step.completed) { %>
                <span class="badge bg-success">Completed</span>
              <% } else { %>
                <form
                  action="/goals/<%= goal._id %>/complete/<%= step.periodNumber %>"
                  method="POST"
                >
                  <button class="btn btn-sm btn-outline-primary">
                    Mark Complete
                  </button>
                </form>
              <% } %>
            </div>

          </li>
        <% }) %>
      </ul>
    </div>
  </div>

  <!-- =========================
       FEASIBILITY
  ========================= -->
  <div class="card mb-4 shadow-sm">
    <div class="card-body">
      <h5 class="card-title">Feasibility</h5>

      <% if (goal.feasibility.isAchievable) { %>
        <span class="badge bg-success mb-2">Achievable</span>
      <% } else { %>
        <span class="badge bg-danger mb-2">Challenging</span>
      <% } %>

      <p class="mt-2"><%= goal.feasibility.reason %></p>

      <% if (goal.feasibility.suggestedAdjustments && goal.feasibility.suggestedAdjustments.length) { %>
        <h6>Suggested Adjustments</h6>
        <ul>
          <% goal.feasibility.suggestedAdjustments.forEach(adj => { %>
            <li><small><%= adj %></small></li>
          <% }) %>
        </ul>
      <% } %>
    </div>
  </div>

  <!-- =========================
       FINANCIAL SNAPSHOT
  ========================= -->
  <div class="card mb-4 shadow-sm">
    <div class="card-body">
      <h5 class="card-title">Financial Snapshot</h5>

      <ul class="list-group list-group-flush">
        <li class="list-group-item">
          Average income per <%= goal.goalSummary.timeframeUnit %>:
          <strong>$<%= goal.financialAnalysis.averageIncomePerPeriod %></strong>
        </li>
        <li class="list-group-item">
          Average expenses per <%= goal.goalSummary.timeframeUnit %>:
          <strong>$<%= goal.financialAnalysis.averageExpensesPerPeriod %></strong>
        </li>
        <li class="list-group-item">
          Potential savings per <%= goal.goalSummary.timeframeUnit %>:
          <strong>$<%= goal.financialAnalysis.averageSavingsPerPeriod %></strong>
        </li>
      </ul>

      <% if (goal.financialAnalysis.spendingInsights && goal.financialAnalysis.spendingInsights.length) { %>
        <h6 class="mt-3">Spending Insights</h6>
        <ul>
          <% goal.financialAnalysis.spendingInsights.forEach(insight => { %>
            <li><small><%= insight %></small></li>
          <% }) %>
        </ul>
      <% } %>
    </div>
  </div>

  <!-- =========================
       MOTIVATION
  ========================= -->
  <div class="alert alert-info shadow-sm">
    <strong>Motivation Tip:</strong>
    <p class="mb-0"><%= goal.motivationTip %></p>
  </div>

  <!-- =========================
       ACTIONS
  ========================= -->
  <div class="d-flex gap-2 mt-4">
    <a href="/goals" class="btn btn-secondary">
      Back to Goals
    </a>

    <form action="/goals/<%= goal._id %>?_method=DELETE" method="POST">
      <button class="btn btn-outline-danger">
        Delete Goal
      </button>
    </form>
  </div>

</div>
