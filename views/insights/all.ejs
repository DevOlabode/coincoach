<% layout('layout/boilerplate.ejs') %>

<style>
  body {
    font-family: Arial, sans-serif;
    background: #f5f5f5;
    padding: 2rem;
  }

  h1, h2 {
    margin-bottom: 0.5rem;
  }

  .card {
    background: #fff;
    padding: 1.5rem;
    border-radius: 8px;
    margin-bottom: 1.5rem;
    box-shadow: 0 2px 6px rgba(0,0,0,0.05);
  }

  .grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(220px, 1fr));
    gap: 1rem;
  }

  .stat {
    font-size: 1.5rem;
    font-weight: bold;
    color: #0066cc;
  }

  ul {
    padding-left: 1.2rem;
  }

  .risk-low {
    color: #28a745;
  }

  .risk-medium {
    color: #ffc107;
  }

  .risk-high {
    color: #dc3545;
    font-weight: bold;
  }

  .btn {
    padding: 0.5rem 1rem;
    border-radius: 4px;
    text-decoration: none;
    display: inline-block;
    border: none;
    cursor: pointer;
    font-size: 0.9rem;
  }

  .btn-primary {
    background: #0066cc;
    color: white;
  }

  .btn-primary:hover {
    background: #0052a3;
  }

  .btn-secondary {
    background: #6c757d;
    color: white;
  }

  .btn-secondary:hover {
    background: #5a6268;
  }
</style>

<div style="max-width: 1200px; margin: 0 auto;">
  <div style="display: flex; justify-content: space-between; align-items: center; margin-bottom: 1.5rem;">
    <h1>üìä Financial Insights</h1>
    <div>
      <a href="/transactions" class="btn btn-secondary" style="margin-right: 0.5rem;">View Transactions</a>
      <form action="/insights/generate" method="POST" style="display: inline;">
        <button type="submit" class="btn btn-primary">üîÑ Regenerate Insights</button>
      </form>
    </div>
  </div>

  <% if (typeof message !== 'undefined' && message) { %>
    <div class="card">
      <p><%= message %></p>
      <% if (typeof message !== 'undefined' && message.includes('No transactions')) { %>
        <a href="/transactions/new" class="btn btn-primary" style="margin-top: 1rem;">Add Transaction</a>
      <% } %>
    </div>
  <% } else if (!insight) { %>
    <div class="card">
      <p>No insights available. Generate insights from your transactions.</p>
      <form action="/insights/generate" method="POST" style="margin-top: 1rem;">
        <button type="submit" class="btn btn-primary">Generate Insights</button>
      </form>
    </div>
  <% } else { %>

    <!-- SUMMARY -->
    <% if (insight.summary) { %>
    <div class="card">
      <h2>Summary</h2>
      <p style="font-size: 1.1rem; line-height: 1.6;"><%= insight.summary %></p>
    </div>
    <% } %>

    <!-- INCOME VS EXPENSE -->
    <% if (insight.incomeVsExpenses) { %>
    <div class="card">
      <h2>Income vs Expenses</h2>
      <div class="grid">
        <div>
          <h3>Total Income</h3>
          <p class="stat" style="color: #28a745;">$<%= insight.incomeVsExpenses.totalIncome?.toLocaleString() || 0 %></p>
        </div>
        <div>
          <h3>Total Expenses</h3>
          <p class="stat" style="color: #dc3545;">$<%= insight.incomeVsExpenses.totalExpenses?.toLocaleString() || 0 %></p>
        </div>
        <div>
          <h3>Net</h3>
          <p class="stat" style="color: <%= (insight.incomeVsExpenses.net || 0) >= 0 ? '#28a745' : '#dc3545' %>;">$<%= insight.incomeVsExpenses.net?.toLocaleString() || 0 %></p>
        </div>
      </div>
    </div>
    <% } %>

    <!-- SPENDING SCORE -->
    <% if (insight.spendingEfficiencyScore !== undefined && insight.spendingEfficiencyScore !== null) { %>
    <div class="card">
      <h2>Spending Efficiency Score</h2>
      <p class="stat"><%= insight.spendingEfficiencyScore %> / 100</p>
      <div style="background: #f0f0f0; height: 20px; border-radius: 10px; margin-top: 0.5rem; overflow: hidden;">
        <div style="background: <%= insight.spendingEfficiencyScore >= 70 ? '#28a745' : insight.spendingEfficiencyScore >= 50 ? '#ffc107' : '#dc3545' %>; height: 100%; width: <%= insight.spendingEfficiencyScore %>%"></div>
      </div>
    </div>
    <% } %>

    <!-- MONTHLY AVERAGES -->
    <% if (insight.monthlyAverages) { %>
    <div class="card">
      <h2>Monthly Averages</h2>
      <div class="grid">
        <div>
          <h3>Avg Monthly Income</h3>
          <p class="stat" style="color: #28a745;">$<%= insight.monthlyAverages.averageMonthlyIncome?.toLocaleString() || 0 %></p>
        </div>
        <div>
          <h3>Avg Monthly Spend</h3>
          <p class="stat" style="color: #dc3545;">$<%= insight.monthlyAverages.averageMonthlySpend?.toLocaleString() || 0 %></p>
        </div>
        <div>
          <h3>Avg Monthly Net</h3>
          <p class="stat" style="color: <%= (insight.monthlyAverages.averageMonthlyNet || 0) >= 0 ? '#28a745' : '#dc3545' %>;">$<%= insight.monthlyAverages.averageMonthlyNet?.toLocaleString() || 0 %></p>
        </div>
      </div>
    </div>
    <% } %>

    <!-- TOP EXPENSES -->
    <% if (insight.topExpenses && Array.isArray(insight.topExpenses)) { %>
    <div class="card">
      <h2>Top Expenses</h2>
      <% if (insight.topExpenses.length === 0) { %>
        <p>No expense data.</p>
      <% } else { %>
        <ul>
          <% insight.topExpenses.forEach(exp => { %>
            <li style="margin-bottom: 0.5rem;">
              <strong><%= exp.name %></strong> ‚Äî
              $<%= exp.amount?.toLocaleString() %> (<%= exp.category %>) on
              <%= exp.date ? new Date(exp.date).toLocaleDateString() : 'N/A' %>
            </li>
          <% }) %>
        </ul>
      <% } %>
    </div>
    <% } %>

    <!-- EXPENSE BREAKDOWN -->
    <% if (insight.expenseBreakdown && insight.expenseBreakdown.categories) { %>
    <div class="card">
      <h2>Expense Breakdown</h2>
      <% if (insight.expenseBreakdown.categories.length === 0) { %>
        <p>No expense categories.</p>
      <% } else { %>
        <ul>
          <% insight.expenseBreakdown.categories.forEach(cat => { %>
            <li style="margin-bottom: 0.5rem;">
              <strong><%= cat.category %></strong>: $<%= cat.total?.toLocaleString() %>
            </li>
          <% }) %>
        </ul>
      <% } %>
    </div>
    <% } %>

    <!-- INCOME SOURCES -->
    <% if (insight.incomeSources && insight.incomeSources.sources && insight.incomeSources.sources.length > 0) { %>
    <div class="card">
      <h2>Income Sources</h2>
      <ul>
        <% insight.incomeSources.sources.forEach(source => { %>
          <li style="margin-bottom: 0.5rem;">
            <strong><%= source.category %></strong>: $<%= source.total?.toLocaleString() %>
          </li>
        <% }) %>
      </ul>
    </div>
    <% } %>

    <!-- RECENT LARGE TRANSACTIONS -->
    <% if (insight.recentLargeTransactions && Array.isArray(insight.recentLargeTransactions)) { %>
    <div class="card">
      <h2>Recent Large Transactions</h2>
      <% if (insight.recentLargeTransactions.length === 0) { %>
        <p>No large transactions.</p>
      <% } else { %>
        <ul>
          <% insight.recentLargeTransactions.forEach(tx => { %>
            <li style="margin-bottom: 0.5rem;">
              <strong><%= tx.name %></strong> ‚Äî
              $<%= tx.amount?.toLocaleString() %> (<%= tx.type %>) on
              <%= tx.date ? new Date(tx.date).toLocaleDateString() : 'N/A' %>
            </li>
          <% }) %>
        </ul>
      <% } %>
    </div>
    <% } %>

    <!-- RECURRING INSIGHTS -->
    <% if (insight.recurringInsights) { %>
    <div class="card">
      <h2>Recurring Insights</h2>
      <p><strong>Recurring Income:</strong> $<%= insight.recurringInsights.totalRecurringIncome?.toLocaleString() || 0 %></p>
      <p><strong>Recurring Expenses:</strong> $<%= insight.recurringInsights.totalRecurringExpenses?.toLocaleString() || 0 %></p>
      <% if (insight.recurringInsights.recurringIncomePercentage !== undefined) { %>
      <p><strong>Recurring Income %:</strong> <%= insight.recurringInsights.recurringIncomePercentage.toFixed(2) %>%</p>
      <% } %>
      <% if (insight.recurringInsights.notes) { %>
      <p style="margin-top: 0.5rem;"><%= insight.recurringInsights.notes %></p>
      <% } %>
    </div>
    <% } %>

    <!-- RISK SIGNALS -->
    <% if (insight.riskSignals && Array.isArray(insight.riskSignals) && insight.riskSignals.length > 0) { %>
    <div class="card">
      <h2>‚ö†Ô∏è Risk Signals</h2>
      <ul>
        <% insight.riskSignals.forEach(risk => { %>
          <li class="risk-<%= risk.severity %>" style="margin-bottom: 0.75rem;">
            <strong>[<%= risk.severity.toUpperCase() %>]</strong> <%= risk.type %>: <%= risk.message %>
          </li>
        <% }) %>
      </ul>
    </div>
    <% } %>

    <!-- OPTIMIZATION SUGGESTIONS -->
    <% if (insight.optimizationSuggestions && Array.isArray(insight.optimizationSuggestions) && insight.optimizationSuggestions.length > 0) { %>
    <div class="card">
      <h2>üí° Optimization Suggestions</h2>
      <ul>
        <% insight.optimizationSuggestions.forEach(suggestion => { %>
          <li style="margin-bottom: 0.75rem;">
            <strong><%= suggestion.area %>:</strong> <%= suggestion.suggestion %>
          </li>
        <% }) %>
      </ul>
    </div>
    <% } %>

    <!-- BEHAVIOR PATTERNS -->
    <% if (insight.behaviorPatterns) { %>
    <div class="card">
      <h2>Behavior Patterns</h2>
      <% if (insight.behaviorPatterns.highestIncomeMonth) { %>
      <p><strong>Highest Income Month:</strong> <%= insight.behaviorPatterns.highestIncomeMonth %></p>
      <% } %>
      <% if (insight.behaviorPatterns.highestExpenseMonth) { %>
      <p><strong>Highest Expense Month:</strong> <%= insight.behaviorPatterns.highestExpenseMonth %></p>
      <% } %>
      <% if (insight.behaviorPatterns.notes) { %>
      <p style="margin-top: 0.5rem;"><%= insight.behaviorPatterns.notes %></p>
      <% } %>
    </div>
    <% } %>

    <!-- FUTURE PROJECTION -->
    <% if (insight.futureProjection) { %>
    <div class="card">
      <h2>üîÆ Future Projection</h2>
      <p><strong>Projected Monthly Net:</strong> $<%= insight.futureProjection.projectedMonthlyNet?.toLocaleString() || 0 %></p>
      <p><strong>Projected Yearly Net:</strong> $<%= insight.futureProjection.projectedYearlyNet?.toLocaleString() || 0 %></p>
      <p><strong>Confidence:</strong> 
        <span style="padding: 0.25rem 0.5rem; border-radius: 4px; background: <%= insight.futureProjection.confidence === 'high' ? '#d4edda' : insight.futureProjection.confidence === 'medium' ? '#fff3cd' : '#f8d7da' %>;">
          <%= insight.futureProjection.confidence || 'N/A' %>
        </span>
      </p>
    </div>
    <% } %>

  <% } %>

</div>
