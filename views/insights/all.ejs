<% layout('layout/boilerplate.ejs') %>

  <style>
    body {
      font-family: Arial, sans-serif;
      background: #f5f5f5;
      padding: 2rem;
    }

    h1, h2 {
      margin-bottom: 0.5rem;
    }

    .card {
      background: #fff;
      padding: 1.2rem;
      border-radius: 8px;
      margin-bottom: 1.5rem;
      box-shadow: 0 2px 6px rgba(0,0,0,0.05);
    }

    .grid {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(220px, 1fr));
      gap: 1rem;
    }

    .stat {
      font-size: 1.2rem;
      font-weight: bold;
    }

    ul {
      padding-left: 1.2rem;
    }
  </style>
</head>
<body>

  <h1>ðŸ“Š Financial Insights</h1>

  <% if (!insights || !insights.insight) { %>
    <p>No insights available.</p>
  <% } else { %>

    <!-- SUMMARY -->
    <div class="card">
      <h2>Summary</h2>
      <p><%= insights.insight.summary %></p>
    </div>

    <!-- INCOME VS EXPENSE -->
    <div class="card grid">
      <div>
        <h3>Total Income</h3>
        <p class="stat"><%= insights.insight.incomeVsExpenses.totalIncome %></p>
      </div>
      <div>
        <h3>Total Expenses</h3>
        <p class="stat"><%= insights.insight.incomeVsExpenses.totalExpenses %></p>
      </div>
      <div>
        <h3>Net</h3>
        <p class="stat"><%= insights.insight.incomeVsExpenses.net %></p>
      </div>
    </div>

    <!-- SPENDING SCORE -->
    <div class="card">
      <h2>Spending Efficiency Score</h2>
      <p class="stat"><%= insights.insight.spendingEfficiencyScore %> / 100</p>
    </div>

    <!-- TOP EXPENSES -->
    <div class="card">
      <h2>Top Expenses</h2>
      <% if (insights.insight.topExpenses.length === 0) { %>
        <p>No expense data.</p>
      <% } else { %>
        <ul>
          <% insights.insight.topExpenses.forEach(exp => { %>
            <li>
              <strong><%= exp.name %></strong> â€”
              <%= exp.amount %> (<%= exp.category %>) on
              <%= new Date(exp.date).toLocaleDateString() %>
            </li>
          <% }) %>
        </ul>
      <% } %>
    </div>

    <!-- EXPENSE BREAKDOWN -->
    <div class="card">
      <h2>Expense Breakdown</h2>
      <% if (insights.insight.expenseBreakdown.categories.length === 0) { %>
        <p>No expense categories.</p>
      <% } else { %>
        <ul>
          <% insights.insight.expenseBreakdown.categories.forEach(cat => { %>
            <li>
              <strong><%= cat.category %></strong>: <%= cat.total %>
            </li>
          <% }) %>
        </ul>
      <% } %>
    </div>

    <!-- RECENT LARGE TRANSACTIONS -->
    <div class="card">
      <h2>Recent Large Transactions</h2>
      <% if (insights.insight.recentLargeTransactions.length === 0) { %>
        <p>No large transactions.</p>
      <% } else { %>
        <ul>
          <% insights.insight.recentLargeTransactions.forEach(tx => { %>
            <li>
              <strong><%= tx.name %></strong> â€”
              <%= tx.amount %> (<%= tx.type %>) on
              <%= new Date(tx.date).toLocaleDateString() %>
            </li>
          <% }) %>
        </ul>
      <% } %>
    </div>

  <% } %>

</body>
</html>
