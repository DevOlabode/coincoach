<% layout('./layout/boilerplate') %>

  <style>
    body {
      font-family: system-ui, sans-serif;
      background: #0f172a;
      color: #e5e7eb;
      display: flex;
      align-items: center;
      justify-content: center;
      height: 100vh;
      margin: 0;
    }

    .converter {
      background: #020617;
      padding: 2rem;
      border-radius: 12px;
      width: 100%;
      max-width: 460px;
      box-shadow: 0 10px 30px rgba(0,0,0,0.4);
    }

    h1 {
      margin-bottom: 0.5rem;
      font-size: 1.6rem;
    }

    .subtitle {
      font-size: 0.9rem;
      color: #9ca3af;
      margin-bottom: 1.5rem;
    }

    label {
      display: block;
      font-size: 0.85rem;
      margin-bottom: 0.25rem;
    }

    input, button {
      width: 100%;
      padding: 0.65rem;
      border-radius: 8px;
      border: 1px solid #1e293b;
      margin-bottom: 1rem;
      background: #020617;
      color: #e5e7eb;
    }

    button {
      background: #2563eb;
      border: none;
      font-weight: 600;
      cursor: pointer;
    }

    button:hover {
      background: #1d4ed8;
    }

    .dropdown {
      position: relative;
      margin-bottom: 1rem;
    }

    .dropdown-list {
      position: absolute;
      width: 100%;
      max-height: 180px;
      overflow-y: auto;
      background: #020617;
      border: 1px solid #1e293b;
      border-radius: 8px;
      display: none;
      z-index: 10;
    }

    .dropdown-item {
      padding: 0.5rem;
      cursor: pointer;
      font-size: 0.9rem;
    }

    .dropdown-item:hover {
      background: #1e293b;
    }

    .result {
      margin-top: 1rem;
      padding: 1rem;
      background: #020617;
      border: 1px solid #1e293b;
      border-radius: 8px;
      display: none;
    }

    .rate {
      font-size: 0.8rem;
      color: #9ca3af;
    }
  </style>
</head>

<body>
<div class="converter">
  <h1>Currency Converter</h1>
  <p class="subtitle">Convert between global currencies using live exchange rates.</p>

  <form id="converterForm" action="/conversion" method="post" class="needs-validation" novalidate>
    <input type="hidden" name="_csrf" value="<%= locals.csrfToken || '' %>">

    <label>Amount</label>
    <input type="number" step="0.01" name="amount" required />

    <label>From</label>
    <div class="dropdown">
      <input type="text" id="fromInput" name="from" placeholder="Search currency..." autocomplete="off" />
      <div class="dropdown-list" id="fromList"></div>
    </div>

    <label>To</label>
    <div class="dropdown">
      <input type="text" id="toInput" name="to" placeholder="Search currency..." autocomplete="off" />
      <div class="dropdown-list" id="toList"></div>
    </div>

    <input type="hidden" name="fromCurrency" />
    <input type="hidden" name="toCurrency" />

    <button type="submit">Convert</button>
  </form>

  <div class="result" id="resultBox">
    <strong id="convertedAmount"></strong>
    <div class="rate" id="exchangeRate"></div>
  </div>
</div>
</body>