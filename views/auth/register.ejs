<% layout('./layout/boilerplate') %>
<h3>Register</h3>
<form action="/register" method="post" class="needs-validation" novalidate>

    <label for="fullName" class="form-label">Full Name</label>
    <input type="text" class="form-control" name="fullName" id="fullName" required placeholder="Enter your full name">

    <label for="email" class="form-label">Email</label>
    <input type="email" class="form-control" name="email" id="email" required placeholder="Enter your email">

    <label for="password" class="form-label">Password</label>
    <input type="password" name="password"  class="form-control" id="password" required placeholder="Enter your password">

    <button type="submit" class="mt-2">Register</button>
</form>