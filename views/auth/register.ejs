<% layout('layout/boilerplate.ejs') %>
<h3>Register</h3>
<form action="/register" method="post" class="needs-validation" novalidate>

    <label for="fullName" class="form-label">Full Name</label>
    <input type="text" class="form-control" name="fullName" id="fullName" placeholder="Enter your full name">

    <label for="email" class="form-label">Email</label>
    <input type="email" class="form-control" name="email" id="email" required>

    <label for="displayName" class="form-label">Display Name</label>
    <input type="text" name="displayName" class="form-control" id="displayName" required>

    <label for="preferredCurrency" class="form-label">Preferred Currency</label>
    <input type="text" name="preferredCurrency" id="preferredCurrency" class="form-control" required>

    <label for="password" class="form-label">Password</label>
    <input type="password" name="password"  class="form-control" id="password" required>

    <button type="submit" class="mt-2">Register</button>
</form>